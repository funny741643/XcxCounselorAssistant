.student-manage-list {
    display: flex;
    justify-content: space-between;
}

.list-item {
    width: 120rpx;
    height: auto;
}

.list-item-pic {
    width: 100rpx;
    height: 100rpx;
    margin: auto;
    margin-bottom: 5rpx;
    border-radius: 50%;
    background-color: rgb(248, 166, 166);
}

.list-item-text {
    text-align: center;
    font-size: 13px;
}

.pic {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}