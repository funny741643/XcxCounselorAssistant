.add-button {
    margin-bottom: 30rpx;
}

.notification {
    background-color: #fff;
    margin-top: 20rpx;
    padding: 20rpx;
    border-radius: 10rpx;
    position: relative;
}

.title {
    font-size: 30rpx;
    font-weight: 600;
    margin-bottom: 10rpx;
}

.notification_item {
    font-size: 28rpx;
}

.status {
    color: rgb(95, 185, 5);
    font-weight: 600;
}

.close {
    position: absolute;
    right: 20rpx;
    top: 30rpx;
}