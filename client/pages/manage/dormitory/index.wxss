/* pages/manage/dormitory/index.wxss */

.head-decorate {
    width: 100vw;
    height: 200rpx;
    background-color: #f36363;
    position: absolute;
    top: 0;
}

.data-profile {
    display: flex;
    justify-content: space-around;
}

.data-profile-item {
    width: 150rpx;
    height: 120rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.common-functions {
    display: flex;
    justify-content: space-between;
}

.function-item {
    flex: 1;
}

.function-item-pic {
    width: 100rpx;
    height: 100rpx;
    margin: auto;
    margin-bottom: 5rpx;
    border-radius: 50%;
    background-color: rgb(248, 166, 166);
}

.function-item-text {
    text-align: center;
    font-size: 13px;
}

.f-table-head {
    display: flex;
    margin-bottom: 10rpx;
}

.f-table-body-col {
    display: flex;
    align-items: center;
    height: 60rpx;
}

.f-table-body-col-even {
    background-color: rgb(247, 224, 224);
}

.f-table-head-item, .f-table-body-col-item {
    flex: 1;
    text-align: center;
}

.pic {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}