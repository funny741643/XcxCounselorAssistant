/* pages/manage/leave/index.wxss */
.head-decorate {
    width: 100vw;
    height: 200rpx;
    background-color: #f36363;
    position: absolute;
    top: 0;
}

.data-profile {
    display: flex;
    justify-content: space-around;
}

.data-profile-item {
    width: 150rpx;
    height: 120rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.common-functions {
    display: flex;
    justify-content: space-between;
}

.function-item {
    flex: 1;
}

.function-item-pic {
    width: 100rpx;
    height: 100rpx;
    margin: auto;
    margin-bottom: 5rpx;
    border-radius: 50%;
    background-color: rgb(248, 166, 166);
}

.function-item-text {
    text-align: center;
    font-size: 13px;
}
