/* components/card/index.wxss */

.f-card {
    box-sizing: border-box;
    width: 700rpx;
    height: auto;
    padding: 20rpx 40rpx;
    margin: 20rpx 0;
    background-color: #fff;
    border-radius: 10rpx;
}

.f-card-headline {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 14px;
    font-weight: 600;
    margin: 5rpx 0 30rpx 0rpx;
}